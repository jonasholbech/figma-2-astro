---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/MyFooter.astro";
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="app">
      <NavBar />
      <slot />
      <Footer />
    </div>
  </body>
</html>
<style is:global>
  :root {
    /* Color styles */
    --font-color: rgba(0, 0, 0, 1);
    --primary--brand: rgba(217, 217, 217, 1);
    --secondary--brand: rgba(174, 172, 244, 1);
    --white: rgba(255, 255, 255, 1);
    --black: rgba(0, 0, 0, 1);
    --stroke: rgba(187, 187, 187, 1);
    --primary--brand--variant: rgba(225, 225, 225, 1);
    --secondary--brand--variant: rgba(200, 199, 249, 1);

    /* Text-size styles */
    /* base size: body (16px) */
    --header-1: 3rem;
    --header-2: 2.44rem;
    --header-3: 1.94rem;
    --body: 1rem;

    /* Effect styles */
    --drop--shadow: 1px 1px 4px 0 rgba(0, 0, 0, 0.25);
  }
  html {
    font-family: system-ui, sans-serif;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-weight: normal;
  }
  h1 {
    font-size: var(--header-1);
  }
  h2 {
    font-size: var(--header-3);
    font-style: normal;
    font-weight: 300;
    line-height: normal;
  }
  h3 {
    font-size: var(--header-3);
  }
  html,
  body {
    font-size: var(--body);
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
  #app {
    max-width: 1300px;
    margin: auto;
  }
</style>
